{
    "compilerOptions": {
      "strict": true,
      "target": "esnext",
      "module": "esnext",
      "allowJs": true,
      "skipLibCheck": true,
      "noEmit": false,
      "moduleResolution": "NodeNext",
      "paths": {
        "@/*": ["./src/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  